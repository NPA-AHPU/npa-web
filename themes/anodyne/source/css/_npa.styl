body
    position relative
    padding-bottom 160px
.slick-prev
    left 5px
    &:before
        content: '<'
.slick-next
    right 5px
    &:before
        content: '>'
.slick-arrow
    background: #0000004d;
    width: 3%;
    height: 13%;
    border-radius: 5px;
    z-index 9
    &:hover
        background: #0000008f
.bg-1
    background: linear-gradient(-45deg, #1943a5 0%, #306dc1 100%);
.pv3
    padding: 25px 10px
    width 70%
.f5-l
    font-size: 18px
.pv5
    padding: 1rem 0 4rem
    position absolute
    bottom: 0
    width: 100%
.w-100.bg-1.ph5-ns.ph3.text-light
    box-shadow: 1px 2px 15px 1px #1c48a8;
    z-index: 1;
    position: relative;
.slick-dots li button
    &:before
        font-size: 2.5rem

@media screen and (max-width:600px)
    body
        min-height 700px
    .pv3
        padding: 15px 5px
        width 80%
    .imgbox
        height 230px
        img 
            height 100%
    .logo
        font-size: 20px
    .his-list-top
        width 100%
        .top-img
            height 200px
            border-radius: 0
            img 
                height 100% 
    .content
        margin 35px 10px
    .page-top
        height 210px
        background url('../img/page-top2.jpg')
        background-size cover
    .top-title
        position: absolute
        top: 35%
        left 10%
        font-size: 20px
        color: #ffffff
        
    .mv6-l
        margin-top 10px
@media screen and (min-width:600px)
    body
        min-height: 1000px
    .logo
        width 33%
        font-size: 20px
    .his-list-top
        width 75%
        margin 0 auto
        .top-img
            overflow: hidden;
            border-radius: 0 0 20px 20px;
    .his-list
        width 100%
        padding 0
        margin 50px 0 70px
    .content
        margin 0 auto
        width 66%
    .all-list
        min-height 200px
        margin-bottom 20px
        padding 10px 10px
    .page-top
        width 100%
        background url('../img/page-top.jpg')
        background-size: cover
        height 400px 
    .top-title
        position absolute
        top 45%
        left 37%
        color #fff
        font-weight: bold
        font-size: 28px
        letter-spacing: 4px
    .mv6-l
        margin-top 40px
      